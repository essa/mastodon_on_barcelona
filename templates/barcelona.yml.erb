web_base: &web_base
  service_type: web
  force_ssl: true
  cpu: 256
  memory: 768

worker_base: &worker_base
  cpu: 128
  memory: 512

environments:
  production:
    name: <%= heritage_name %>
    image_name: <%= repository_uri %>
    before_deploy: rake db:migrate
    scheduled_tasks:
      - schedule: cron(15 20 ? * * *)
        command: rake mastodon:daily
    services:
      - <<: *web_base
        name: web
        command: bundle exec rails s -p 3000 -b '0.0.0.0'
        desired_count: 0
        listeners:
          - endpoint: mstdn
            health_check_path: /about
      - <<: *web_base
        name: streaming
        command: npm run start
        memory: 256
        desired_count: 0
        listeners:
          - endpoint: mstdn
            rule_conditions:
              - type: path-pattern
                value: /api/v1/streaming
            health_check_path: /api/v1/streaming/health_check
            rule_priority: 10
      - <<: *worker_base
        name: worker
        command: bundle exec sidekiq -q default -q mailers -q pull -q push
